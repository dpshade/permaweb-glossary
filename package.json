{
  "name": "permaweb-glossary-search",
  "version": "1.0.0",
  "description": "A lightweight client-side search for the Permaweb Glossary using FlexSearch",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "bun run server.js",
    "dev": "bun --watch run server.js",
    "build": "mkdir -p dist && cp -r public/* dist/ && cp -r src dist/",
    "clean": "rm -rf dist",
    "deploy-main": "bun run deploy.js",
    "deploy-staging": "bun run deploy.js --staging",
    "test": "bun test"
  },
  "keywords": [
    "search",
    "glossary",
    "permaweb",
    "javascript",
    "flexsearch"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "bun": "^1.0.20",
    "permaweb-deploy": "^1.1.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dpshade/permaweb-glossary"
  },
  "dependencies": {
    "dotenv": "^16.4.7"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": ["js", "json", "jsx"]
  }
}
